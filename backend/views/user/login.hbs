<div class="col col-md-6 center">
	<h1>PRIJAVA</h1>
	<h5>Prijavi se z uporabniškim imenom</h5>
	<hr>
	<form action="login" method="post">
		<fieldset>
			<div class="form-group row">
				<div class="col-sm-10">
					<input type="text" class="form-control" id="username" name="username" placeholder="Uporabniško ime"
						required>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-10">
					<input type="password" class="form-control" id="password" name="password" placeholder="Geslo"
						required>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-10">
					<input type="submit" class="btn-block btn btn-primary" value="Prijava">
				</div>
			</div>
		</fieldset>

	</form>
</div>